@model IEnumerable<Event_time_Project.Models.Organization>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h2>Filterable Table</h2>
    <p>Type something in the input field to search the table for first names, last names or emails:</p>
    <input id="myInput" type="text" placeholder="Search..">
    <br><br>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <thead>
            <tr>
                <th>Organization</th>
                <th>Organization Information</th>
                <th>Address</th>
                <th>Organizer Name</th>
                <th>Operations</th>

            </tr>
        </thead>
        <tbody id="myTable">


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Org_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Org_information)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name_organizer)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Org_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Org_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Org_id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
